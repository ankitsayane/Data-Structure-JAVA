package com.operations;

public class DoublyLinkedList implements LinkedList {
	class Node{
		int data;
		Node prev;
		Node next;
		Node(int data){
			this.data = data;
			this.prev = null;
			this.next = null;
		}
	}
	
	Node head;
	public DoublyLinkedList() {
		head = null;
	}

	@Override
	public void insertAtFront(int data) {
		Node newNode = new Node(data);
		if(isEmpty()) {
			head = newNode;
			return;
		}
		head.prev = newNode;
		newNode.next = head;
		head = newNode;
	}

	@Override
	public void insertAtRear(int data) {
		// TODO Auto-generated method stub

	}

	@Override
	public void deleteFromFront() {
		// TODO Auto-generated method stub

	}

	@Override
	public void deleteFromRear() {
		// TODO Auto-generated method stub

	}

	@Override
	public void show() {
		Node temp = head;
		while(temp != null) {
			System.out.print(temp.data + " ");
			temp = temp.next;
		}
		System.out.println();
	}

	@Override
	public boolean isEmpty() {
		if(head == null) {
			return true;
		}
		return false;
	}

}
