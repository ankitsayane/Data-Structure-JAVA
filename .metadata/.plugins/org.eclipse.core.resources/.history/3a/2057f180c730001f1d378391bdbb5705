package com.operations;

import com.exceptions.ResourceNotFoundException;

public class LinkedListQueue implements Queue {
	class Node{
		int data;
		Node next;
	}
	
	Node head;

	@Override
	public void enQueue(int data) {
		Node node = new Node();
		node.data = data;
		node.next = null;
		
		if(isEmpty()) {
			head = node;
		}
		
		Node temp = head;
		while(temp.next != null) {
			temp = temp.next;
		}
		temp.next = node;
		
	}

	@Override
	public void deQueue() {
		if(isEmpty()) {
			throw new ResourceNotFoundException("Queue is Empty");
		}
		
		head = head.next;
		
	}

	@Override
	public void show() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public boolean isEmpty() {
		if(head==null) {
			return true;
		}
		return false;
	}

}
